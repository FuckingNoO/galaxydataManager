<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>test</title>
</head>
<body>
<div id="uploader" class="wu-example">
    <!--用来存放文件信息-->
    <div id="thelist" class="uploader-list"></div>
    <div class="btns">
        <div id="picker">
            <div class="webuploader-pick">选取文件</div>
            <div class="webuploader-file" style="display: none;"><input type="file" name="file" multiple></div>
        </div>
        <button id="ctlBtn" class="btn btn-default">开始上传</button>
    </div>
</div>
<script src="./webuploader.js"></script>
<script>
    var uploader = WebUploader.create({

        // swf文件路径
        swf: 'http://localhost:3000/stylesheets/webuploader/Uploader.swf',

        // 文件接收服务端。
        server: '/upload_chunk',

        // 选择文件的按钮。可选。
        // 内部根据当前运行是创建，可能是input元素，也可能是flash.
        pick: '#picker',

        // 不压缩image, 默认如果是jpeg，文件上传前会压缩一把再上传！
        resize: false
    });

    uploader.on( 'fileQueued', function( file ) {
        $list.append( '<div id="' + file.id + '" class="item">' +
                '<h4 class="info">' + file.name + '</h4>' +
                '<p class="state">等待上传...</p>' +
                '</div>' );
    });

</script>
</body>
</html>